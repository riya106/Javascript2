    <h1>Hello</h1><!--in the line javascript-->
    <!--this is within using a java script code <script type="text/javascript">
        alert("Hello");
    </script>-->
    <!--adding a java script file here like this -->
    <script src="index.js" charset="UTF-8">

    </script>
</body>
